<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style media="screen">
      body{
        font-family: 'Open Sans', sans-serif;
        background: #e0e0e0;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light p-4">
  <a class="navbar-brand" href="/dashboard">Dashboard</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/dashboard">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/dashboard/add">Add Item</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/dashboard/logout">Logout</a>
      </li>
    </ul>
  </div>
</nav>

  <div class="container my-5">

    <div class="content mt-5 text-center">
    <h2>Result : </h2>
    <% items.forEach(item =>{%>

    <div class="row mt-5" style="border : 1px solid black; border-radius : 5px;">
      <div class="col-12 p-4">
        <div class="row">

        <div class="col-3">

          <img src="<%=item.url%>" alt="" style="height : 80px; width : 80px">
        </div>
        <div class="col-3">

          <p class="mt-3"><%=item.title%></p>
        </div>
        <div class="col-3">
          <p class="mt-3"><b><%=item.description.substr(0,100)%></b></p>

        </div>
        <div class="col-3 mt-2 d-flex">

          <form class="" action="/edit/<%=item._id%>" method="get" >
            <button type="submit" class="btn btn-dark mr-2" name="button">Edit</button>
          </form>
        <form action="/dashboard/<%= item._id%>?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger"name="button">Delete</button>
      </form>
      </div>
    </div>
      </div>
    </div>
  <%})%>

    <div class="items">
      <div class="item">

      </div>
    </div>
  </div>
    </div>
  </body>
</html>
